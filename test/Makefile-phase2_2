.PHONY: all clean
CC = gcc
CFLAGS = -Wall -std=c99
LDFLAGS = -lgmp
SRCDIR = src
OBJDIR = obj
OBJFILES = phase2_2.o rsa_file_char.o crypt_decrypt.o rsa_tools_gmp.o rsa_tools.o bezout.o other_base64.o rsa_print_tools.o Sha-256/sha256_utils.o Sha-256/sha256.o
TARGET = phase2_2

all: $(TARGET)

$(TARGET): $(OBJFILES)
	$(CC) $(CFLAGS) -o $(TARGET) $(OBJFILES) $(LDFLAGS)
	mv -f *.o obj

clean:
	rm -f $(OBJDIR)/*.o *~

clean_all:
	rm -f $(OBJDIR)/*.o $(TARGET) *~
	rm -f Sha-256/*.o *~
