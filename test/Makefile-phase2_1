.PHONY: all clean
CC = gcc
CFLAGS = -Wall -std=c99
LDFLAGS = -lgmp
SRCDIR = src
OBJFILES = phase2_1.o rsa_file_char.o crypt_decrypt.o rsa_tools_gmp.o rsa_tools.o bezout.o other_base64.o rsa_print_tools.o Sha-256/sha256_utils.o Sha-256/sha256.o
TARGET = phase2_1

all: $(TARGET)

$(TARGET): $(SRCDIR)/$(OBJFILES)
	$(CC) $(CFLAGS) -o $(TARGET) $(OBJFILES) $(LDFLAGS)

clean:
	rm -f $(OBJFILES) *~

clean_all:
	rm -f $(OBJFILES) $(TARGET) *~
